# =================================
# ZDT POS Dashboard Environment Configuration
# =================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# =================================
# Database Configuration (PostgreSQL)
# =================================
# Primary database connection
DB_HOST=your_database_host
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_PORT=5432

# Backup database connection (optional)
DB_HOST_BACKUP=backup_database_host
DB_PORT_BACKUP=5432

# =================================
# Stripe Payment Processing
# =================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_ENDPOINT_SECRET=whsec_your_webhook_endpoint_secret

# =================================
# Shopify Integration
# =================================
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_PASSWORD=shppa_your_shopify_private_app_password
SHOPIFY_TOKEN=shppa_your_shopify_access_token
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret
SHOP_NAME=your-shop-name

# =================================
# Security & Authentication
# =================================
JWT_SECRET=your_jwt_secret_key_min_32_chars
SEAL_SECRET=seal_secret_your_session_encryption_key
SEAL_TOKEN=seal_token_your_session_token_key

# =================================
# Application Configuration
# =================================
NODE_ENV=development
PORT=8080
ELECTRON_PORT=8901